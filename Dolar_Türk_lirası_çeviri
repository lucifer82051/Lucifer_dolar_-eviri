<div class="app">
  <div class="corner c1"></div>
  <div class="corner c2"></div>
  <div class="corner c3"></div>
  <div class="corner c4"></div>

  <div class="title">LUCIFER</div>

  <div class="field">
    <div class="label">Amerikan Doları</div>
    <div class="input-wrap">
      <input type="number" id="usd" placeholder="0" oninput="usdToTry()">
      <div class="currency">USD</div>
    </div>
  </div>

  <div class="swap" onclick="swap()">⇅</div>

  <div class="field">
    <div class="label">Türk Lirası</div>
    <div class="input-wrap">
      <input type="number" id="try" placeholder="0" oninput="tryToUsd()">
      <div class="currency">TRY</div>
    </div>
  </div>

  <div class="rate-info">
    SABİT KUR · 1 USD = 43,13 TL
  </div>
</div>

<script>
const RATE = 43.13;

function usdToTry() {
  const usd = parseFloat(document.getElementById("usd").value);
  if (!isNaN(usd)) {
    document.getElementById("try").value = (usd * RATE).toFixed(2);
  }
}

function tryToUsd() {
  const tl = parseFloat(document.getElementById("try").value);
  if (!isNaN(tl)) {
    document.getElementById("usd").value = (tl / RATE).toFixed(2);
  }
}

function swap() {
  const usd = document.getElementById("usd").value;
  const tl = document.getElementById("try").value;
  document.getElementById("usd").value = tl;
  document.getElementById("try").value = usd;
}
</script>

